@model Testkendo.Models.Model.ViewModel

<div class="k-edit-form-container">
    <h3>Customized Person edit template</h3>
    <br />
    @Html.HiddenFor(model => model.objgetitem.PId)

    <div class="k-edit-label">
        @Html.LabelFor(model => model.objgetitem.PName)
    </div>
    <div class="k-edit-field">
        @Html.EditorFor(model => model.objgetitem.PName)
        @Html.ValidationMessageFor(model => model.objgetitem.PName)
    </div>

    <div class="k-edit-label">
        @Html.LabelFor(model => model.objgetitem.CName)
    </div>
    <div class="k-edit-field">
        @(Html.Kendo().DropDownList().Name("CategoryDropDownList")
         .DataTextField("CName")
        .DataValueField("CID")
        .DataSource(source =>
        {
        source.Read(read =>
        {
        read.Action("GetCategory", "Home"); // Set the Action and Controller names.
        })
        .ServerFiltering(true); // If true, the DataSource will not filter the data on the client.
        })
        .SelectedIndex(0)) // Select the first item.
    </div>

    <div class="k-edit-label">
        @Html.LabelFor(model => model.objgetitem.PPrice)
    </div>
    <div class="k-edit-field">
        @Html.EditorFor(model => model.objgetitem.PPrice)
        @Html.ValidationMessageFor(model => model.objgetitem.PPrice)
    </div>
    <div class="k-edit-label">
        @Html.LabelFor(model => model.objgetitem.PDesc)
    </div>
    <div class="k-edit-field">
        @Html.EditorFor(model => model.objgetitem.PDesc)
        @Html.ValidationMessageFor(model => model.objgetitem.PDesc)
    </div>
</div>
